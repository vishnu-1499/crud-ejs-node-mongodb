<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src = "https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.js"></script>
    <style>
        .one{
            display: flex;
            box-sizing: border-box;
            height: 80vh;
            width: 100%;
            align-items: center;
            justify-content: center;
        }
        form{
            display: inline-block;
        }
        body {
      background-image: url("https://img.freepik.com/premium-vector/flat-geometric-green-abstract-background-vector_624619-3.jpg?w=2000");
      background-repeat: no-repeat;
      background-attachment: fixed; 
      background-size: 100% 100%;
    }
    .form-control{
        border: 2px solid black;
    }
    </style>
</head>
<body>
    <center> <h1 class="text-secondary"> Update User</h1></center>
    <div class="one">

    <form id="editform" method="post">

        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="<%- user.name%>" aria-describedby="nameHelp">
          </div>

          <div class="mb-3">
            <label for="age" class="form-label">Age</label>
            <input type="number" value="<%- user.age%>" name="age" class="form-control" id="age">
          </div>

          <div class="mb-3">
              <label for="contact" class="form-label">Contact</label>
              <input type="number" value="<%- user.contact%>" name="contact" class="form-control" id="contact">
            </div>

          <center>
          <button type="submit" class="btn btn-outline-info">Submit</button></center>
    </form>
    </div>

    <script>
        const $form = $("#editform")
        $form.on("submit", submitHandler)
    
        function submitHandler(e) {
            e.preventDefault()
            $.ajax({
                url: "http://localhost:3500/update/<%- user._id %>",
                type: "POST",
                data: $form.serialize()
            }).done(response => {
                console.log(response);
                window.location.href="http://localhost:3500/read"
            })
        }
    </script>
</body>
</html>