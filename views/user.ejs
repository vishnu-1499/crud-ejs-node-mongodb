<!DOCTYPE html>
<html lang="en">
<head>
    
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src = "https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<style>
    .one{
        display: flex;
        box-sizing: border-box;
        height: 80vh;
        width: 100%;
        align-items: center;
        justify-content: center;
    }
    form{
        display: inline-block;
    }
    body {
  background-image: url("https://img.freepik.com/free-vector/flat-geometric-background_23-2148957769.jpg");
  background-repeat: no-repeat;
  background-attachment: fixed; 
  background-size: 100% 100%;
}
</style>
<body>
   <center> <h1 class="text-success">Add New User</h1></center>
    <div class="one">
    <form id="userform" method="post">

        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" name="name" aria-describedby="nameHelp">
        </div>

        <div class="mb-3">
          <label for="age" class="form-label">Age</label>
          <input type="number" name="age" class="form-control" id="age">
        </div>

        <div class="mb-3">
            <label for="Contact" class="form-label">Contact</label>
            <input type="number" name="contact" class="form-control" id="contact">
          </div>

        <center>
        <button type="submit" class="btn btn-outline-success">Submit</button></center>
      </form>
    </div>
    
    
    
    
    <script>
        const $form = $("#userform")
        $form.on("submit", submitHandler)

        function submitHandler(e) {
            e.preventDefault()
            $.ajax({
                url: "http://localhost:3500/create",
                type: "POST",
                data: $form.serialize(),
            }).done(response => {
                console.log(response);
                window.location.href="http://localhost:3500/read"
            })
        }
    </script>
</body>
</html>